.myPage
  .myPage__content
    .myPage__content__title
    .myPage__content__box
      .myPage__content__box__left
        %ul.myPage__content__box__left__menu
          %li.myPage__content__box__left__menu__list
            = link_to "MY PAGE トップ", user_path(@user.id)
          %li.myPage__content__box__left__menu__list
            = link_to "注文履歴", orders_path
          %li.myPage__content__box__left__menu__list
            = link_to "送付先住所", addresses_path
          %li.myPage__content__box__left__menu__list
            = link_to "支払方法", new_card_path
          %li.myPage__content__box__left__menu__list
            = link_to "アカウント詳細", edit_user_registration_path
          %li.myPage__content__box__left__menu__list
            = link_to "ログアウト", destroy_user_session_path, method: :delete
      .myPage__content__box__right
        .orderedItems
          .orderedItems__content
            .orderedItems__content__title
              ご注文履歴
            - if @orders.count == 0
              .orderedItems__content__nothing
                ご注文履歴はございません
            - else
              %table.orderedItems__content__table{border: 2}
                %thead
                  %tr
                    %th 購入日
                    %th 注文番号
                    %th 状況
                    %th 購入商品
                    %th 合計金額(税込)
                  %tbody
                    - @orders.each do |order|
                    - product = Product.find(order.order_details.to_a[0][:product_id])
                      %tr
                        %td= order.created_at.strftime('%Y/%m/%d') 
                        %td= order.id
                        %td= order.status
                        %td
                          - if order.order_details.to_a.size == 1
                            = link_to "#{product.namejap}", "#"
                          -else 
                            = link_to "#{product.namejap} など #{order.order_details.to_a.size}件", "#"
                        %td= "¥ #{convertToJPY(order.price)}"
