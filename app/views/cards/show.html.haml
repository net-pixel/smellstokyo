.myPage
  .myPage__content
    .myPage__content__title
    .myPage__content__box
      .myPage__content__box__left
        %ul.myPage__content__box__left__menu
          %li.myPage__content__box__left__menu__list
            = link_to "MY PAGE トップ", user_path(@user.id)
          %li.myPage__content__box__left__menu__list
            = link_to "注文履歴", orders_path
          %li.myPage__content__box__left__menu__list
            = link_to "送付先住所", addresses_path
          %li.myPage__content__box__left__menu__list
            = link_to "支払方法", new_card_path
          %li.myPage__content__box__left__menu__list
            = link_to "アカウント詳細", edit_user_registration_path
          %li.myPage__content__box__left__menu__list
            = link_to "ログアウト", destroy_user_session_path, method: :delete
      .myPage__content__box__right
        .payment
          .payment__content
            .payment__content__title
              カード情報
            .payment__content__box
              .payment__content__box__cardImage
                = image_tag "cards/#{@card_src}", width: 40, height: 28
              .payment__content__box__details
                .payment__content__box__details__cardNumber
                  = "カード番号：**** **** **** " + @card_info.last4
                .payment__content____boxdetails__cardMMYY
                  = "有効期限：" + @exp_month + " / " + @exp_year
          .payment__cardDelete
            = button_to "削除する", card_path(@card.id), {method: :delete, id: 'charge-form', name: "inputForm", class: "payment__cardDelete__deleteBtn"}