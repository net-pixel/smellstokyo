%h1 Listing products

%table
  %thead
    %tr
      %th Name
      %th Description
      %th image
      -# %th Price
      -# %th Discontinued
      %th{:colspan => "3"}

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.description
        %td= product.image
        -# %td= product.price
        %td= link_to 'Show', "#"
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' }

%br